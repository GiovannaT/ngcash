// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider             = "postgresql"
  url                  = env("DATABASE_URL")
  shadowDatabaseUrl    = env("SHADOW_DATABASE_URL")
  referentialIntegrity = "prisma"
}

model Users {
  userId      String  @id @default(cuid())
  username    String  @unique
  email       String  @unique
  password    String
  userAccount String
  account     Account @relation(fields: [userAccount], references: [accountId])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  accountId String @id @default(cuid())
  balance   Int

  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  Users         Users[]
  debitAccount  Transactions? @relation("DebitAccount")
  creditAccount Transactions? @relation("CreditAccount")
}

model Transactions {
  transactionId   String  @id @default(cuid())
  value           Int
  debit           String  @unique
  credit          String  @unique
  debitedAccount  Account @relation("DebitAccount", fields: [debit], references: [accountId])
  creditedAccount Account @relation("CreditAccount", fields: [credit], references: [accountId])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
